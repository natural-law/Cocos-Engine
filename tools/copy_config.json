[
    {
        "from": "cocos2d-x",
        "to": "gen/cocos2d-x",
        "include": [
            "cocos/*.h$",
            "cocos/math/*.inl$",
            "extensions/*.h$",
            "external/*.h$",
            "external/lua/luasocket/*.lua$",
            "external/win32-specific/gles/prebuilt/*.dll$",
            "external/win32-specific/zlib/prebuilt/*.dll$",
            "external/win32-specific/icon/prebuilt/*.dll$",
            "external/curl/prebuilt/win32/*.dll$",
            "external/lua/luajit/prebuilt/win32/*.dll$",
            "external/websockets/prebuilt/win32/*.dll$",
            "external/tiff/prebuilt/win32/*.dll$"
        ]
    },
    {
        "from": "cocos2d-x/cocos/platform/android/java",
        "to": "gen/cocos2d-x/cocos/platform/android/java"
    },
    {
        "from": "cocos2d-x/cocos/scripting/lua-bindings/script",
        "to": "gen/cocos2d-x/cocos/scripting/lua-bindings/script"
    },
    {
        "from": "cocos2d-x/templates",
        "to": "gen/cocos2d-x/templates",
        "exclude" : [
            "cpp-template-default/*",
            "lua-template-default/*"
        ]
    },
    {
        "from": "cocos2d-x/tools/cocos2d-console",
        "to": "gen/cocos2d-x/tools/cocos2d-console"
    },
    {
        "from": "x-templates",
        "to": "gen/cocos2d-x/templates",
        "exclude": [
            "lua-template-default/*"
        ]
    }
]
