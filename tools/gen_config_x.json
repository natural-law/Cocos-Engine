{
    "copy_config" : [
        {
            "from": "cocos2d-x/cocos",
            "to": "gen/cocos/frameworks/cocos2d-x/cocos",
            "exclude": [
                "*.cpp$",
                "*.c$",
                "*.m$",
                "*.mm$",
                "*wp8",
                "*winrt",
                "*.vcxproj",
                "*CMakeLists.txt",
                "*linux",
                "*java/bin/*",
                "*java/libs/*",
                "*java/gen/*",
                "*proj.*",
                "audio/ios/*",
                "audio/mac/*",
                "audio/openal/*",
                "audio/win32/*"
            ]
        },
        {
            "from": "cocos2d-x/extensions",
            "to": "gen/cocos/frameworks/cocos2d-x/extensions",
            "include": [
                "Android.mk",
                "cocos-ext.h",
                "ExtensionMacros.h",
                "assets-manager/*.h",
                "GUI/*.h",
                "physics-nodes/*.h"
            ]
        },
        {
            "from": "cocos2d-x/external",
            "to": "gen/cocos/frameworks/cocos2d-x/external",
            "exclude": [
                "*.cpp$",
                "*.c$",
                "*.m$",
                "*.mm$",
                "*wp8",
                "*linux",
                "*winrt",
                "*proj.*",
                "*CMakeLists.txt",
                "config.json",
                "version.json",
                "lua/lua/*",
                "lua/luajit/*.sh",
                "lua/luajit/src/*",
                "*prebuilt/ios/*",
                "*prebuilt/mac/*"
            ]
        },
        {
            "from": "cocos2d-x/plugin",
            "to": "gen/cocos/frameworks/cocos2d-x/plugin",
            "exclude": [
                "plugin-x_ios.xcworkspace",
                "samples/*",
                "tools/pluginx-bindings-generator/*"
            ]
        },
        {
            "from": "cocos2d-x/templates",
            "to": "gen/cocos/frameworks/cocos2d-x/templates",
            "exclude" : [
                "lua-template-default/*"
            ]
        },
        {
            "from": "cocos2d-x/tools/cocos2d-console",
            "to": "gen/cocos/frameworks/cocos2d-x/tools/cocos2d-console",
            "exclude": [
                "config.json",
                "download-bin.py",
                "version.json",
                "*.pyc"
            ]
        },
        {
            "from": "x-templates",
            "to": "gen/cocos/frameworks/cocos2d-x/templates",
            "exclude": [
                "lua-template-default/*",
                ".gitignore"
            ]
        }
    ],
    "android_mks" : [
        "gen/cocos/frameworks/cocos2d-x/external/Box2D/Android.mk",
        "gen/cocos/frameworks/cocos2d-x/cocos/editor-support/cocosbuilder/Android.mk",
        "gen/cocos/frameworks/cocos2d-x/extensions/Android.mk",
        "gen/cocos/frameworks/cocos2d-x/cocos/ui/Android.mk",
        "gen/cocos/frameworks/cocos2d-x/external/chipmunk/Android.mk",
        "gen/cocos/frameworks/cocos2d-x/cocos/audio/android/Android.mk",
        "gen/cocos/frameworks/cocos2d-x/cocos/scripting/lua-bindings/Android.mk",
        "gen/cocos/frameworks/cocos2d-x/cocos/Android.mk",
        "gen/cocos/frameworks/cocos2d-x/cocos/editor-support/cocostudio/Android.mk",
        "gen/cocos/frameworks/cocos2d-x/cocos/network/Android.mk",
        "gen/cocos/frameworks/cocos2d-x/cocos/platform/android/Android.mk",
        "gen/cocos/frameworks/cocos2d-x/cocos/editor-support/spine/Android.mk"
    ],
    "xcode_proj_info" : {
        "cocos2d-x/build/cocos2d_libs.xcodeproj" : {
            "outputdir" : "gen/cocos/frameworks/cocos2d-x/prebuilt",
            "targets" :[ "build all libs" ]
        },
        "cocos2d-x/cocos/scripting/lua-bindings/proj.ios_mac/cocos2d_lua_bindings.xcodeproj" : {
            "outputdir" : "gen/cocos/frameworks/cocos2d-x/prebuilt",
            "targets" : [ "luabindings" ]
        }
    },
    "win32_proj_info" : {
        "cocos2d-x/build/cocos2d-win32.vc2012.sln" : {
            "outputdir" : "gen/cocos/frameworks/cocos2d-x/prebuilt/win32",
            "targets" : [
                "libAudio", "libBox2D", "libchipmunk",
                "libcocos2d", "libCocosBuilder", "libCocosStudio",
                "libExtensions", "libGUI", "libLocalStorage",
                "liblua", "libNetwork", "libSpine"
            ]
        }
    }
}
